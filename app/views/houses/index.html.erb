<h1>Senarai Rumah Cendawan</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nama Rumah</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= link_to house.name, house_shelves_path(house.id) %></td>
        <!-- <td><%= link_to 'Show', house %></td> -->
        <!-- <td><%= link_to 'Edit', edit_house_path(house) %></td> -->
        <td><%= link_to 'Musnah', house, method: :delete, data: { confirm: 'Anda pasti ingin membuang rumah ini?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

