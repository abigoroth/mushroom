<h1>Senarai staf</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Nombor Telefon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.nama %></td>
        <td><%= staff.phone %></td>
        <td><%= link_to 'Papar', staff %></td>
        <td><%= link_to 'Ubah', edit_staff_path(staff) %></td>
        <td><%= link_to 'Buang', staff, method: :delete, data: { confirm: 'Anda pasti mahu membuang staf?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Tambah Staf Baru', new_staff_path %>
